<% set_page_title "New team" %>

<h4 class="page-header">New Team</h4>

<div class="col-xs-12 col-md-6">

  <%= form_for @team, html: {class: 'form', id: 'team-form'} do |f| %>
    <%= render partial: "shared/errors", locals: {errors: @team.errors, item: 'team'} %>

    <div class="mb-3">
      <%= f.label :teamname %>
      <%= f.text_field :teamname, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= f.label :school %>
      <%= f.text_field :school, class: 'form-control' %>
    </div>

    <hr>

    <div class="actions">
      <%= f.submit class: 'btn btn-success btn-lg' %>
    </div>

  <% end %>

  <div class="mt-1">
    <%= link_to 'Back to teams List', teams_path, class: 'btn btn-secondary btn-sm' %>
  </div>
</div>

