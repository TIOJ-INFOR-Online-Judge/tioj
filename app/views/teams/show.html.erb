<% set_page_title @team.teamname %>

<div class="col-md-4">
  <%= image_tag(@team.avatar.thumb.to_s, class: "img-rounded img-responsive") %><br/>
  <h4><%= @team.teamname %></h4>

  <table>
    <tr>
      <td class="col-md-3">School:</td>
      <td class="col-md-9"><%= @team.school %></td>
    </tr>
    <tr>
      <td class="col-md-3">Created:</td>
      <td class="col-md-9"><%= @team.created_at.to_fs(:clean) %></td>
    </tr>
  </table>

  <p>

  <div>
    <%= link_to 'Edit', edit_team_path(@team), class: 'btn btn-info btn-xs' %>
    <%= link_to 'Destroy', @team, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %>
  </div>
  <div>
    <%= link_to 'Back to teams List', teams_path, class: 'btn btn-default btn-xs' %>
  </div>
</div>

<div class="col-md-8">
  <table class ="table table-hover table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th></th>
        <th>Username</th>
        <th>Nickname</th>
      </tr>
    </thead>
    <tbody>
      <% @team.users.each_with_index do |user, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= link_to image_tag(user.avatar.mini_thumb.to_s, class: "img-rounded"), user_path(user) %></td>
          <td><%= link_to user.username, user_path(user) %></td>
          <td><%= user.nickname %></td>
        </tr>
    </tbody>
  <% end %>
  </table>
</div>

