<% set_page_title "Teams" %>
<h4 class="page-header">Teams</h4>

<%= link_to 'New Team', new_team_path, class: 'btn btn-success btn-sm' %>
<br>
<%= paginate @teams %>
<table class="table table-hover table-condensed table-striped">
  <thead>
    <tr>
      <%# <th>ID</th> %>
      <th></th>
      <th>Teamname</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <%# <td><%= team.id %1></td> %>
        <td><%= link_to image_tag(team.avatar.mini_thumb.to_s, class: "img-rounded"), team_path(team) %></td>
        <td><%= link_to team.teamname, team_path(team) %></td>
        <td>Created at: <%= team.created_at.strftime("%Y-%m-%d") %></td>
        <td>
          <%= link_to 'Show', team, method: :get, class: 'btn btn-success btn-xs' %>
          <%= link_to 'Edit', edit_team_path(team), class: 'btn btn-info btn-xs' %>
          <%= link_to 'Destroy', team, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @teams %>
