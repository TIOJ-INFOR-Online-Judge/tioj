<% set_page_title "Teams" %>
<h4 class="page-header">Teams</h4>

<%= link_to 'New Team', new_team_path, class: 'btn btn-success btn-sm' %>
<br>
<%= paginate @teams %>
<table class="table table-hover table-condensed table-striped">
  <thead>
    <tr>
      <%# <th>ID</th> %>
      <th></th>
      <th>Teamname</th>
      <th>Motto</th>
      <th>Created At</th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <%# <td><%= team.id %1></td> %>
        <td><%= link_to image_tag(team.avatar.mini_thumb.to_s, class: "img-rounded"), team_path(team) %></td>
        <td><%= link_to team.teamname, team_path(team) %></td>
        <% unless team.motto.blank? %>
          <td><div class="motto"><%= user.motto %></div></td>
        <% else %>
          <td></td>
        <% end %>
        <td><%= team.created_at.strftime("%Y-%m-%d") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @teams %>
