<% poster = post.user %>
<% post_object = @postable ? [@postable, post] : [post] %>

<div class="post_title">
  <h4 class="post_title">
    <% if not @postable %>
      <% if post.postable_type == 'Problem' %>
        <span class="title_post_type small">[Issue: Problem #<%= post.postable_id %>]</span>
      <% elsif post.type_issue? %>
        <span class="title_post_type small">[Issue]</span>
      <% end %>
    <% elsif @problem %>
      <span class="title_post_type small">[<%= post.post_type.capitalize %>]</span>
    <% end %>
    <%= post.title %>
  </h4>
</div>
<div class="post_content">
  <% if post.type_solution? %>
    <%= markdown(post.content) %>
  <% else %>
    <%= markdown_no_html(post.content) %>
  <% end %>
</div>
<div class="post_footer small">
  <%= post_user(post) %>
  <% if post.global_visible %>
    (public post)
  <% else %>
    (private post)
  <% end %>
</div>
<%= link_to "View Post", contest_adaptive_polymorphic_path([post]), class:'btn btn-primary btn-sm'%>
<% if allow_edit(post) %>
  <%= link_to "Edit Post", contest_adaptive_polymorphic_path([post], action: :edit), class:'btn btn-info btn-sm'%>
  <%= link_to "Delete Post", polymorphic_path(post_object), method: :delete, data: {confirm:"Sure?"}, class:'btn btn-danger btn-sm' %>
<% end %>

<% if post.comments.present? %>
  <div class="comments mt-3">
    <h5>Comments: </h5>
    <% comments = post.comments %>
    <% count = 0;%>
    <% comments.each do |comment| %>
      <% count += 1 %>
      <div class="comment card bg-light mb-3"><div class="card-body">
          <%= render partial: 'comments/show_comment', locals: {post: post, comment: comment, count: count}  %>
        </div>
      </div>
    <% end %><%# comments.each %>
  </div><%# comments %>
<% end %><%# if post.comments.present? %>

<% if user_signed_in? and (effective_admin? or not @contest) and (not @problem or @problem.discussion_enabled?) %>
  <div class="d-inline-block">
    <button class="btn btn-success btn-sm" data-bs-toggle="collapse" data-bs-target="#<%= dom_id(post, :new_comment_form) %>" aria-expanded="false" aria-controls="<%= dom_id(post, :new_comment_form) %>">
      New Comment
    </button>
  </div>
  <div class="collapse" id="<%= dom_id(post, :new_comment_form) %>">
    <div class="card card-body bg-light mt-3">
      <%= render partial: 'comment_form', locals: {post: post} %>
    </div>
  </div>
<% end %>
