<% set_page_title "Announcements" %>

<% if @contest %>
  <h4 class="page-header">New Contest Announcement <small><%= @contest.title %></small></h4>
<% else %>
  <h4 class="page-header">New Announcement</h4>
<% end %>

<% if @contest %>
  <% form_target = [@contest, @announcement] %>
<% else %>
  <% form_target = @announcement %>
<% end %>

<%= semantic_form_for form_target do |f| %>
  <div class="row">
    <div class="col-lg-3 mb-3">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control form-control-sm" %>
    </div>
    <div class="col-lg-6 mb-3">
      <%= f.label :body %>
      <%= f.text_field :body, class: "form-control form-control-sm" %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.submit class: 'btn btn-success btn-sm' %>
  </div>
<% end %>
<br>

<% if @contest %>
  <h4 class="page-header">Contest Announcements</h4>
<% else %>
  <h4 class="page-header">Announcements</h4>
<% end %>

<table class="table table-hover table-striped table-sm">
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @announcements.each do |anno| %>
      <tr>
        <td><%= raw anno.title %></td>
        <td><%= raw anno.body %></td>
        <td style="width: 0; white-space: nowrap;">
          <%= link_to 'Edit', contest_adaptive_polymorphic_path([anno], action: :edit), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Destroy', anno, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-sm btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Back to Home', root_path, class: 'btn btn-secondary btn-sm' %>
